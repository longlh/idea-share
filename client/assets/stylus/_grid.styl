@import 'kouto-swiss'
@require '_define.styl'

for width in (1..10)
	.panel-{width * 100}
		margin-left auto
		margin-right auto
		max-width (width * 100)px
		overflow hidden

.grid
	display table
	width 100%
	table-layout fixed

	.row
		display table-row

		.col
			display table-cell
			padding-left 20px
			padding-right 20px

			&:first-of-type
				padding-left 0

			&:last-of-type
				padding-right 0

.ui-line
	padding base-padding-ui-line

	&.break
		margin-bottom base-height-ui-line

	&.break-half
		margin-bottom (base-height-ui-line / 2)

	.pull-left
	.pull-right
		padding base-padding-ui-line

	time
		line-height (base-height-ui-line - base-padding-ui-line)
		padding-left base-padding-ui-line

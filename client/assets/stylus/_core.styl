@import 'kouto-swiss'
@require '_define.styl'
@require '_grid.styl'
@require '_mixin.styl'

meyer-reset()
box-sizing-reset()
normalize()

body
	font-size base-font-size
	font-family "Courier New",Courier,"Lucida Sans Typewriter","Lucida Typewriter",monospace

h1
	text-transform uppercase

h2
	margin .3em 0
	font-weight bold

.text-left
	text-align left

.text-right
	text-align right

.text-center
	text-align center

.center
	margin-left auto
	margin-right auto
